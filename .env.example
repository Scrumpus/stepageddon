# Environment variables for docker-compose
# Copy this file to .env and fill in your API keys

# === GENERATION MODE ===
# Set to "true" for AI-enhanced generation (requires Anthropic API key)
# Set to "false" for pure algorithmic generation (no API key needed)
USE_AI_GENERATION=false

# === API KEYS ===
# Anthropic API Key (only required if USE_AI_GENERATION=true)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Spotify API Credentials (optional, for Spotify URL support)
# Get credentials from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
